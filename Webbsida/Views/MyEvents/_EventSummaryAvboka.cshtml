@model Webbsida.ViewModels.IndexEventViewModel

@if (!string.IsNullOrWhiteSpace(Model.Name) && !string.IsNullOrWhiteSpace(Model.Description))
{
    <div id="EventSummary" class="Avboka">
            <a href="@Url.Action("GetEvent", "Event", new {id = @Model.Id})">
                <img src=@Model.ImagePath>

                <div id="EventText">
                    <h1>@Model.Name</h1>
                    <p>@Model.GetPartialDescription(30)</p>
                </div>
            </a>
        
        @using (Html.BeginForm("UnBookEvent", "Event", FormMethod.Post))
        { 
            <input type="hidden" name="EventId" id="Id1" value="@Model.Id" />
            <input type="hidden" name="fromPage" id="Id2" value="EventSumary" />
            <button type="submit" value="@Model.Id" class="btn btn-danger">AvBoka</button>
        }
        
    </div>
}
else
{
    <div id="EventSummary" style="border-style: none; border: none; box-shadow: none;"></div>
}
